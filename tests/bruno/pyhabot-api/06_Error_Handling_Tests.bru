{
  "name": "Error Handling Tests",
  "description": "Test various error scenarios and edge cases",
  "children": [
    {
      "name": "Invalid Watch ID - Get",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/{{apiVersion}}/watches/invalid",
        "headers": [
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "none"
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 422",
          "script": "bru.test('Status is 422', () => { bru.expect(res.getStatus()).toBe(422); });"
        }
      ]
    },
    {
      "name": "Negative Watch ID",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/{{apiVersion}}/watches/-1",
        "headers": [
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "none"
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 404 or 422",
          "script": "bru.test('Status is 404 or 422', () => { bru.expect([404, 422]).toContain(res.getStatus()); });"
        }
      ]
    },
    {
      "name": "Empty JSON Body",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/{{apiVersion}}/watches",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "json",
          "json": {}
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 422",
          "script": "bru.test('Status is 422', () => { bru.expect(res.getStatus()).toBe(422); });"
        }
      ]
    },
    {
      "name": "Invalid JSON",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/{{apiVersion}}/watches",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ invalid json }"
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 422",
          "script": "bru.test('Status is 422', () => { bru.expect(res.getStatus()).toBe(422); });"
        }
      ]
    },
    {
      "name": "Invalid Webhook Type",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/{{apiVersion}}/watches/{{watchId}}/webhook",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "json",
          "json": {
            "webhook_url": "{{testDiscordWebhook}}",
            "webhook_type": "invalid_type"
          }
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 422",
          "script": "bru.test('Status is 422', () => { bru.expect(res.getStatus()).toBe(422); });"
        }
      ]
    },
    {
      "name": "Invalid URL Format",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/{{apiVersion}}/watches",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "json",
          "json": {
            "url": "not-a-valid-url",
            "webhook_url": "{{testDiscordWebhook}}"
          }
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 422",
          "script": "bru.test('Status is 422', () => { bru.expect(res.getStatus()).toBe(422); });"
        }
      ]
    },
    {
      "name": "Missing Required Fields",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/{{apiVersion}}/webhooks/test",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "json",
          "json": {
            "webhook_type": "discord"
          }
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 422",
          "script": "bru.test('Status is 422', () => { bru.expect(res.getStatus()).toBe(422); });"
        }
      ]
    }
  ]
}