{
  "name": "Webhook Management",
  "description": "Webhook configuration and testing endpoints",
  "children": [
    {
      "name": "Set Webhook - Discord",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/{{apiVersion}}/watches/{{watchId}}/webhook",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          },
          {
            "name": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "json",
          "json": {
            "webhook_url": "{{testDiscordWebhook}}",
            "webhook_type": "discord",
            "webhook_username": "PYHABOT",
            "webhook_avatar": "https://example.com/pyhabot-avatar.png",
            "custom_headers": {
              "User-Agent": "PYHABOT-Webhook/1.0"
            }
          }
        }
      },
      "response": [],
      "tests": [
        {
          "name": "Status is 200",
          "script": "bru.test('Status is 200', () => { bru.expect(res.getStatus()).toBe(200); });"
        },
        {
          "name": "Response has webhook URL",
          "script": "bru.test('Response has webhook URL', () => { bru.expect(res.getBody()).toHaveProperty('webhook_url'); });"
        }
      ]
    },
    {
      "name": "Set Webhook - Slack",
